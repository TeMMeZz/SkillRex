        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">
        <android.support.v7.widget.CardView
            android:id="@+id/E"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="10dp">
            <LinearLayout
